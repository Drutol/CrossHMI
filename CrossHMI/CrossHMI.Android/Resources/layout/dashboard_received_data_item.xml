<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:padding="2dp" android:orientation="horizontal"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content" android:id="@+id/VariableName"
        android:textColor="#444" tools:text="VariableName" 
        android:layout_height="wrap_content" />

    <TextView android:layout_weight="1" android:layout_marginStart="16dp"
        android:layout_width="0dp" android:id="@+id/Value"
        android:gravity="center" android:textAlignment="center"
        android:textColor="#000" tools:text="VariableName"
        android:layout_height="wrap_content" />
</LinearLayout>
