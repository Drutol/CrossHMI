<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:paddingBottom="8dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingBottom="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e6e6e6" android:elevation="2dp"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/BoilerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#444"
                tools:text="BoilerName" />

            <TextView
                android:id="@+id/Position"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#000"
                tools:text="BoilerPosition" />
        </LinearLayout>
    </FrameLayout>


    <LinearLayout android:background="#f6f6f6"
        android:layout_width="match_parent"
        android:layout_marginTop="-2dp"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CCX001_ControlOut" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:id="@+id/ToggleValue"
                    android:textColor="#000"
                    android:textSize="26dp"
                    tools:text="ON" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="CCX001_Input2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/Value"
                    android:layout_marginTop="4dp"
                    android:textColor="#000"
                    android:textSize="26dp"
                    tools:text="123" />
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

</LinearLayout>
